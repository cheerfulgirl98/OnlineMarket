<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/iran_sans_bold</item>

    </style>

    <style name="title_textView">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normal">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="emptyError">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="blackBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iran_sans_bold</item>
    </style>

    <style name="whiteTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iran_sans_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="myInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
