<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:id="@+id/rel_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_basket" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/img_home_burgerMenu"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/ic_burger_menu" />
        </RelativeLayout>
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider_home"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txv_suggestions"
                android:text="تخفیف های شگفت انگیز"

                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txv_suggestions_all"
                android:layout_alignParentEnd="true"
                android:text="لیست کامل"
                android:textSize="10sp"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_home_suggestions"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="right"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary"
            android:id="@+id/header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:textColor="@color/white"
                android:layout_marginTop="110dp"
                android:gravity="center"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/editProfile"
                android:text="editProfile"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/orders"
                android:text="ordersList"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/favorit_List"
                android:text="favorits"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/logOut"
                android:text="logout"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>


    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>
