<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider_home"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


        <TextView
            android:id="@+id/txv_suggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تخفیف های شگفت انگیز"
            android:padding="12dp"
            style="@style/normal"
            android:textColor="@color/red"
            android:textStyle="bold"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_home_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محصولات پرفروش"
        android:padding="12dp"
        style="@style/normal"
        android:textStyle="bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_home_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محصولات جدید"
        android:padding="12dp"
        style="@style/normal"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_home_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
</LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            app:menu="@menu/navigation_menu" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
 
 
 
 
 

